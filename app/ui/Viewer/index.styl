.viewer {
  position: relative;
  background: #000;
  color: #fff;
  h2 {
    position: absolute;
    top: 0px;
    left: 0px;
  }
  &:hover .hover-overlay {
    opacity: 1;
    transition: opacity 0.5s;
  }
  .hover-overlay {
    z-index: 2;
    opacity: 0;
    background: rgba(0,0,0,0.3);
    text-align: center;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
}
