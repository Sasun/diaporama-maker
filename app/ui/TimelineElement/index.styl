.timeline-element {
  position: relative;
  &:hover {
    .actions, .sub-actions {
      transition: opacity 0.4s;
      opacity: 1;
    }
  }
  .actions {
    opacity: 0;
    position: absolute;
    width: 100%;
    text-align: center;
    top: 0%;
    font-size: 2em;
    text-shadow: 0px 0.5px 1px #000;
  }

  .sub-actions {
    opacity: 0;
    position: absolute;
    width: 100%;
    text-align: center;
    top: 45%;
    font-size: 2em;
    text-shadow: 0px 0.5px 1px #000;
  }
}
