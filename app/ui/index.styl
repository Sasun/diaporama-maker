.vignette {
  span.tname {
    color: #fff;
    font-size: 0.8em;
    font-weight: 400;
    text-shadow: 0px 0.5px 1px #000;
    position: absolute;
    top: 2px;
    left: 6px;
    overflow: hidden;
    width: 99%;
    white-space: nowrap;
  }
  span.tauthor {
    font-weight: 300;
    font-size: 0.7em;
    color: #fff;
    text-shadow: 0px 0px 1px #000;
    position: absolute;
    bottom: 2px;
    left: 0px;
    text-align: center;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
  }
  &:hover {
    .actions {
      transition: opacity 0.4s;
      opacity: 1;
    }
  }
  .actions {
    z-index: 3;
    opacity: 0.1;
    position: absolute;
    top: 0;
    left: 0;
    text-align: center;
    width: 100%;
    font-size: 2em;
    text-shadow: 0px 0.5px 1px #000;
  }
}
