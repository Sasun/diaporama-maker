
.bootstrap {

  h1 {
    font-size: 2em;
    margin-left: -40px;
  }

  h2.section {
    margin-top: 50px;
    margin-bottom: 10px;
    margin-left: -40px;
    i {
      padding-right: 10px;
    }
  }
  p {
    margin-top: 20px;
    margin-bottom: 0;
  }

  .buttons {
    a {
      text-decoration: none;
    }
  }

  .settings-preview {
    position: relative;
    margin-top: 20px;
    h3 {
      position: absolute;
      top: 5px;
      right: 10px;
      color: #fff;
      opacity: 0.6;
      padding: 0;
      margin: 0;
    }
    .buttons {
      text-align: center;
      width: 100%;
      position: absolute;
      top: 45%;
      a {
        font-size: 3em;
        border-radius: 4px;
        padding: 0.2em 0.8em;
        background: #FFF;
        color: #000;
        text-decoration: none;
        &:hover {
          color: #000;
          background: #FFF;
          text-decoration: none;
        }
      }
    }
  }
}
