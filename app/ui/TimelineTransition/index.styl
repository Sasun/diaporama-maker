.timeline-transition {
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  background: rgba(40, 40, 40, 0.8);
  border-left: 1px solid #000;
  border-right: 1px solid #000;
  z-index: 2;
  text-align: center;
  color: #fff;

  &:hover {
    .sub-actions {
      transition: opacity 0.4s;
      opacity: 1;
    }
  }
  .sub-actions {
    opacity: 0;
    position: absolute;
    width: 100%;
    text-align: center;
    top: 45%;
    font-size: 2em;
    text-shadow: 0px 0.5px 1px #000;
  }
  
}
